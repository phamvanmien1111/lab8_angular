    <div class="flex flex-col items-center justify-center min-h-screen px-6">
    <div class="w-full max-w-6xl mb-10">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                {{#each project.imageproject}}
                <div class="swiper-slide ">
                    <img src="/images/{{this}}" class="w-full h-[500px] object-cover rounded-3xl ">
                </div>
                {{/each}}
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl w-full">
            <div class="relative">
                <div class="bg-orange-500 rounded-lg p-6 relative">
                    <img src="{{project.image}}" alt="Project Image"
                        class="rounded-lg shadow-lg relative z-10 w-full object-cover">
                </div>
            </div>
            <div class="space-y-4">
                <p class="text-gray-600 uppercase text-sm"></p>
                <h1 class="text-3xl font-bold">
                    Xin chào đây là Project dự án <br> <span class="text-black underline decoration-purple-500">{{project.title}}</span>.
                </h1>
                <p class="text-gray-700">{{project.description}}</p>
                <p><strong>Tech Stack:</strong></p>
                <ul class="text-gray-800 list-disc pl-5">
                    {{#each project.techStack}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <a href="{{project.link}}" target="_blank"
                    class="inline-block bg-orange-500 text-white px-6 py-2 rounded-full font-semibold shadow-lg hover:bg-orange-600 transition">
                    Xem GitHub
                </a>
                <a href="/" class="inline-block ml-4 text-gray-700 font-semibold hover:underline">Quay lại</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper(".mySwiper", {
            spaceBetween: 20,
            centeredSlides: true,
            autoplay: {
                delay: 3000,  
                disableOnInteraction: false,
            },
            loop: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    </script>
